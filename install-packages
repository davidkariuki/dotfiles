#!/usr/bin/env bash

echo "Installing applications..."

yay -S --needed --answerclean Y --answerdiff N --removemake --noconfirm zsh \
	tmux bat neofetch wezterm lazygit go neovim-nightly-bin btop rbenv ruby-build ripgrep exa \
	discord github-cli picom starship lf polybar flameshot brightnessctl nordvpn-bin \
  qt5-graphicaleffects qt5-svg qt5-quickcontrols2 noto-fonts-emoji ttf-font-awesome

